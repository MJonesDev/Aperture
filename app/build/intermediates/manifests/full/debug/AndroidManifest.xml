<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marlonjones.projectevo"
    android:versionCode="12"
    android:versionName="0.0.8-A" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.NFC" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.0" />

    <uses-feature android:name="android.hardware.sensor.gyroscope" />
    <uses-feature android:name="android.hardware.sensor.accelerometer" />

    <application
        android:name="com.marlonjones.projectevo.ApertureBasing"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.marlonjones.projectevo.activity.ActivityHome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.marlonjones.projectevo.activity.AlbumActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNew" />
        <activity
            android:name="com.marlonjones.projectevo.activity.PhotoPreviewActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNew" />
        <activity
            android:name="com.marlonjones.projectevo.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/SettingsTheme" >
        </activity>
    </application>

</manifest>